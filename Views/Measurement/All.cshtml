@model LymphSiteViewModel

<div class="view-header"><h1>All Measurements for @ViewBag.LymphSiteName</h1></div>

<div class="view-body">

    @if (Model.Measurements.Count > 0)
    {
    <div class="tables-container">
        @for (int i = 0; i < Model.Measurements.Count; i++)
        {

            @*<div>*@
            <table>
                <tr>
                    <td></td>
                    <th>@Model.Measurements[i].MeasurementDate.ToShortDateString()</th>
                </tr>
                <tr>
                    <td>
                    </td>
                    <td>
                        <a class="crud-action crud-action" asp-controller="Measurement" asp-action="Show" asp-route-LymphSiteId="@ViewBag.LymphSiteId" asp-route-id="@Model.Measurements[i].Id">Edit</a> | 
                        <a class="crud-action crud-action--danger" asp-controller="Measurement" asp-action="Delete" asp-route-id="@Model.Measurements[i].Id", new { onclick = "return confirm('Are you sure you want to delete this measurement?');" }>Delete</a>
                    </td>


                </tr>
                @for (int p = 0; p < Model.Measurements[i].Circumferences.Count; p++)
                {
                    <tr>
                        <td>@(p + 1)</td>
                        <td>@Model.Measurements[i].Circumferences[p].DistanceAround</td>
                    </tr>

                }
            </table>
            @*</div>*@

        }
    </div>
            }

            else
            {
            <p>There are no measurements associated with this site.</p>
            }

        </div>