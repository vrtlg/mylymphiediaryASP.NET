@model LymphSiteViewModel
<div class="view-header">
    <h1>Affected Sites</h1>
    <p>Choose a site to track your condition</p>
</div>
<div class="view-body">
    @foreach (var item in Model.LymphSites)
    {
        <div class="section">
            <h2>@item.Name</h2>
            <div class="section__buttons">
                <a class="button" asp-controller="Measurement" asp-action="New" asp-route-LymphSiteId=@item.Id>New Measurement</a>
                <a class="button" asp-controller="Measurement" asp-action="All" asp-route-LymphSiteId=@item.Id>Measurement History</a>
            </div>
        </div>

        <asp:Calender ID="Calendar1" runat="server" SelectionMode="DayWeekMonth">
        </asp:Calender>

    }
</div>

